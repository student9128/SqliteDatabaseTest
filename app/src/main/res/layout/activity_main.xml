<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:scrollbars="none"
    tools:context="com.kevin.sqlitedatabasetest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_green_dao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_2"
            android:text="GreenDao"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:text="Create"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_retrieve_name"
                style="@style/bg_edit_text"
                android:hint="Text the name to retrieve" />

            <Button
                android:id="@+id/btn_retrieve_name"
                style="@style/btn_style"
                android:text="Retrieve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_retrieve_age"
                style="@style/bg_edit_text"
                android:hint="Text the age to retrieve" />

            <Button
                android:id="@+id/btn_retrieve_age"
                style="@style/btn_style"
                android:text="Retrieve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_update_name"
                style="@style/bg_edit_text"
                android:hint="Text the name to update" />

            <EditText
                android:id="@+id/et_update_age"
                style="@style/bg_edit_text"
                android:layout_marginTop="10dp"
                android:hint="Text the age in the database" />

            <Button
                android:id="@+id/btn_update_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/teal_2"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_delete_name"
                style="@style/bg_edit_text"
                android:hint="Text the name to delete" />

            <Button
                android:id="@+id/btn_delete_name"
                style="@style/btn_style"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_delete_age"
                style="@style/bg_edit_text"
                android:hint="Text the age to delete" />

            <Button
                android:id="@+id/btn_delete_age"
                style="@style/btn_style"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_insert_name"
                style="@style/bg_edit_text"
                android:hint="Text the name to insert" />

            <EditText
                android:id="@+id/et_insert_age"
                style="@style/bg_edit_text"
                android:layout_marginTop="10dp"
                android:hint="Text the name to insert" />

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/teal_2"
                android:text="Insert"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="NAME" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="AGE" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
